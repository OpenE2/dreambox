<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
           http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">

	<display-name>DreamboxMessageServer</display-name>
	<description>
		DreamboxMessageServer.
	</description>

	<!-- Define servlets that are included in the example application -->
	<servlet>
		<servlet-name>DreamboxMessageServer</servlet-name>
		<servlet-class>org.opendreambox.dms.DreamboxMessageServer</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>DreamboxMessageServer</servlet-name>
		<url-pattern>/DreamboxMessageServer</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
